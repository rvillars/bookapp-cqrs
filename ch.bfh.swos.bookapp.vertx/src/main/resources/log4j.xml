<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE log4j:configuration SYSTEM "log4j.dtd"><log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true">      <appender name="console-appender" class="org.apache.log4j.ConsoleAppender">            <layout class="org.apache.log4j.PatternLayout">                  <param name="ConversionPattern"                        value="%d{dd MMM yyyy HH:mm:ss} %5p %c{1} - %m%n" />            </layout>      </appender>      <root>            <level value="INFO" />            <appender-ref ref="console-appender" />      </root></log4j:configuration>